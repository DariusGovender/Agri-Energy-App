@model Agri_Energy_Application.Models.Product

@{
    ViewData["Title"] = "Create";
}

<style>
    :root {
        --text: #070809;
        --background: #f7f9fa;
        --primary: #386a8a;
        --secondary: #96c1db;
        --accent: #6cb1dc;
    }

    .form-label {
        color: var(--text);
    }

    .form-control {
        background-color: var(--background);
        border: 1px solid var(--accent);
        border-radius: 5px;
        padding: 8px;
        width: 100%;
    }

    .custom-button {
        background-color: var(--primary);
        border: 1px solid var(--accent);
        color: var(--text);
        border-radius: 5px;
        padding: 8px 16px;
        margin-top: 10px;
    }

        .custom-button:hover {
            background-color: var(--accent);
            color: var(--background);
        }

    .custom-card {
        background-color: var(--secondary);
        border: 1px solid var(--accent);
        border-radius: 10px;
        padding: 20px;
    }

    .custom-input {
        background-color: var(--background); /* Changed input background to match overall background */
        border: 1px solid var(--accent);
        border-radius: 15px;
        padding: 10px; /* Added padding to inputs */
        width: 100%; /* Full width input */
    }
</style>

<h1>Add a product</h1>

<h4>Product Details</h4>
<hr />
<div class="custom-card">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="custom-input" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="custom-input" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label"></label>
                <input asp-for="ProductionDate" class="custom-input" type="date" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn custom-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn custom-button">Back</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
